map $http_upgrade $connection_upgrade {
    default upgrade;
    ''   '';
}

upstream docker_{{ youtrack_public_domain }} {
  server localhost:{{ youtrack_local_port }};
}


server {
  listen 80;
  server_name {{ youtrack_public_domain }};

  server_tokens off;

  access_log /var/log/nginx/{{ youtrack_public_domain }}/access.log;
  error_log /var/log/nginx/{{ youtrack_public_domain }}/error.log;

  client_max_body_size 0;

  # required to avoid HTTP 411: see Issue #1486 (https://github.com/dotcloud/docker/issues/1486)
  chunked_transfer_encoding on;

  location / {
    proxy_pass http://docker_{{ youtrack_public_domain }};
    proxy_set_header Host $server_name:$server_port;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection $connection_upgrade;

  }
}
